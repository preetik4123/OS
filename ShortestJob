//Non-Premptive
#include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter the number of processes to be executed :";
    cin>>n;
    
    int at[50],bt[50],wt[50],ct[50],tat[50],remaining_bt[50];
    for(int i = 0;i<n;i++){
        cout<<"Enter AT and BT for P :"<<(i+1)<<"\t";
        cin>>at[i]>>bt[i];
        remaining_bt[i] = bt[i];
        
    }
    int current_time = 0;
    bool visited[50] = {false};
    int completed = 0;
    
    while(completed != n){
        int idx = -1;
        int min_bt = 100000;
        for(int i = 0 ;i<n;i++){
        if(!visited[i] && at[i] <= current_time && bt[i] < min_bt ){
            min_bt = bt[i];
            
            idx = i;
        }
    }
    if(idx != -1){
        wt[idx] = current_time - at[idx];
        current_time += bt[idx];
        ct[idx] = current_time;
        tat[idx] = ct[idx]-at[idx];
        visited[idx] = true;
        completed++;
    }
    else{
        current_time++;
    }
    }
     cout << "\nPID\tAT\tBT\tCT\tTAT\tWT\n";
    for (int i = 0; i < n; i++) {
        cout << (i+1) << "\t" << at[i] << "\t" << bt[i] << "\t"
             << ct[i] << "\t" << tat[i] << "\t" << wt[i] << endl;
    }

    return 0;
}
-------------------------------------------------------------------------------
//Premptive
#include <iostream>
using namespace std;
int main(){
int n;
cout<<"Enter the number of processes to be executed : \t";
cin>>n;
int at[50],bt[50],wt[50],tat[50],remaining_bt[50],ct[50];
for(int i = 0;i<n;i++){
cout<<"Enter the required Arrival Time and Burst Time: \t";
cin>>at[i]>>bt[i];
remaining_bt[i] = bt[i];

}

int completed = 0;
int current_time = 0;
while(completed != n){
    int idx = -1;
int min_bt = 100000;
    for (int i = 0; i < n; i++) {
    if(remaining_bt[i]>0 && at[i] <= current_time){
        if(remaining_bt[i] < min_bt){
            min_bt = remaining_bt[i];
            idx = i;
        
        }
    }
    }
    if(idx != -1){
        remaining_bt[idx]--;
        current_time++;
        if(remaining_bt[idx] == 0){
            completed++;
            ct[idx] = current_time;
            tat[idx] = ct[idx]-at[idx];
            wt[idx] = tat[idx]- bt[idx];
        }
        
    }
else {
    current_time++; 
}
}
cout << "\nPID\tAT\tBT\tCT\tTAT\tWT\n";
    for (int i = 0; i < n; i++) {
        cout << (i+1) << "\t" << at[i] << "\t" << bt[i] << "\t"
             << ct[i] << "\t" << tat[i] << "\t" << wt[i] << endl;
    }

    return 0;

}
