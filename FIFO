#include <iostream>
using namespace std;

void display(int frames[], int f) {
    for(int i = 0; i < f; i++) {
        if(frames[i] == -1)
            cout << "- ";
        else
            cout << frames[i] << " ";
    }
    cout << endl;
}

void FIFO(int pages[], int n, int f) {
    int frames[10];
    int index = 0;
    int pageFault = 0;

    // initialize frames
    for(int i = 0; i < f; i++) {
        frames[i] = -1;
    }

    for(int i = 0; i < n; i++) {
        int page = pages[i];
        bool hit = false;

        // check if page is already present
        for(int j = 0; j < f; j++) {
            if(frames[j] == page) {
                hit = true;
            }
        }

        // if page not found â†’ replace using FIFO
        if(!hit) {
            frames[index] = page;
            index = (index + 1) % f;  // circular pointer
            pageFault++;
        }

        // display output
        cout << "Page " << page << " => ";
        display(frames, f);
        cout << (hit ? " (Hit)" : " (Fault)") << endl;
    }

    cout << "\nTotal Page Faults: " << pageFault << endl;
}

int main() {
    int n, f;

    cout << "Enter number of pages: ";
    cin >> n;

    int pages[50];
    cout << "Enter page reference string:\n";
    for(int i = 0; i < n; i++)
        cin >> pages[i];

    cout << "Enter number of frames: ";
    cin >> f;

    FIFO(pages, n, f);

    return 0;
}
