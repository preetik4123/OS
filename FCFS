//Without arrival time
#include <iostream>
using namespace std;

int main(){
    int n ;
    cout<<"Enter the number of processes:\n";
    cin>>n;
    
    int wt[50],bt[50],tat[50];
    
    cout<<"Enter the burst time of each process:"<<endl;
    for(int i = 0 ;i<n;i++){
        cout<<"Burst Time of P"<<(i+1)<<" : ";
        cin>>bt[i];
    }
        
        wt[0] = 0;
        for(int i = 1; i < n; i++){
            wt[i] = wt[i-1]+bt[i-1];
        
    }
    
    for(int i = 0 ; i<n ;i++){
        tat[i] = wt[i]+bt[i];
    }
    cout<<"\nP\tBT\tWT\tTAT"<<endl;
    for(int i = 0 ;i<n;i++){
        cout<<"P"<<(i+1)<<"\t"<<bt[i]<<"\t"<<wt[i]<<"\t"<<tat[i]<<"\t"<<endl;
    }
    return 0;
    
}
-----------------------------------------
//With Arrival Time
#include <iostream>
using namespace std;
int main(){
    int at[50],bt[50],wt[50],tat[50],ct[50],pid[50];
    int n;
    cout<<"Number the number of process:\t";
    cin>>n;
    
    for(int i = 0 ;i < n;i++){
        pid[i] = i+1;
        cout<<"Enter the Arrival Time and Burst Time for P"<<pid[i]<<" : ";
        cin>>at[i]>>bt[i];
    }
    
    for(int i = 0; i<n ;i++){
        for(int j = 0; j <(n-i-1) ; j++){
            if(at[j]>at[j+1]){
                
                int temp = at[j];
                at[j] = at[j+1];
                at[j+1] = temp;
                
               temp = bt[j];
               bt[j] = bt[j+1];
               bt[j+1] = temp;
               
               temp = pid[j];
               pid[j] = pid[j+1];
               pid[j+1] = temp;
            }
        }
    }
    // Waiting Time
    
    int current_time = 0;
    for(int i = 0 ; i<n ;i++){
        if(current_time < at[i]){
            current_time = at[i];
        }
        
        wt[i] = current_time-at[i];
        ct[i] = current_time+bt[i];
        tat[i] = ct[i]-at[i];
        current_time = ct[i];
    }
    cout<<"\nPID\tAT\tBT\tCT\tTAT\tWT\n"<<endl;
    for(int i = 0 ;i<n;i++){
        cout<<pid[i]<<"\t"<<at[i]<<"\t"<<bt[i]<<"\t"<<ct[i]<<"\t"<<tat[i]<<"\t"<<wt[i]<<endl;
    }
    return 0;
    
}
